{% extends 'base.html.twig' %}

{% block title %}
	ProdutoCategoria index
{% endblock %}

{% block breadcumb %}
	ProdutoCategoria index
{% endblock %}

{% block conteudo %}
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nome</th>
					<th>Situação</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>
				{% for produto_categorium in produto_categorias %}
					<tr>
						<td>{{ produto_categorium.id }}</td>
						<td>{{ produto_categorium.nome }}</td>
						<td>{{ produto_categorium.situacao }}</td>
						<td>
							<a href="{{ path('produto_categoria_show', {'id': produto_categorium.id}) }}">show</a>
							<a href="{{ path('produto_categoria_edit', {'id': produto_categorium.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<a href="{{ path('produto_categoria_new') }}">Create new</a>
{% endblock %}
