{% extends 'base.html.twig' %}

{% block title %}Produto index{% endblock %}

{% block body %}
    <h1>Produto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Valor</th>
                <th>Data_cadastro</th>
                <th>Situacao</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td>{{ produto.id }}</td>
                <td>{{ produto.nome }}</td>
                <td>{{ produto.valor }}</td>
                <td>{{ produto.dataCadastro ? produto.dataCadastro|date('Y-m-d') : '' }}</td>
                <td>{{ produto.situacao }}</td>
                <td>
                    <a href="{{ path('produto_show', {'id': produto.id}) }}">show</a>
                    <a href="{{ path('produto_edit', {'id': produto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produto_new') }}">Create new</a>
{% endblock %}
