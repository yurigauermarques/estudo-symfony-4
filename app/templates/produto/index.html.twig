{% extends 'base.html.twig' %}

{% block title %}
	Produto index
{% endblock %}

{% block breadcumb %}
	Produto index
{% endblock %}

{% block conteudo %}
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Nome</th>
					<th scope="col">Valor</th>
					<th scope="col">Data_cadastro</th>
					<th scope="col">Situacao</th>
					<th scope="col">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for produto in produtos %}
					<tr>
						<td scope="row">{{ produto.id }}</td>
						<td>{{ produto.nome }}</td>
						<td>{{ produto.valor }}</td>
						<td>{{ produto.dataCadastro ? produto.dataCadastro|date('Y-m-d') : '' }}</td>
						<td>{{ produto.situacao }}</td>
						<td>
							<a href="{{ path('produto_show', {'id': produto.id}) }}">show</a>
							<a href="{{ path('produto_edit', {'id': produto.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('produto_new') }}">Create new</a>
	</div>
{% endblock %}
